{
  "name": "@mijia-life/clawdbot-wecom",
  "version": "0.3.1",
  "private": true,
  "type": "module",
  "description": "WeCom (企业微信) channel plugin for Clawdbot (internal apps).",
  "license": "MIT",
  "exports": "./src/index.js",
  "clawdbot": {
    "extensions": [
      "./src/index.js"
    ],
    "channel": {
      "id": "wecom",
      "label": "WeCom",
      "selectionLabel": "WeCom (企业微信自建应用)",
      "docsPath": "/channels/wecom",
      "docsLabel": "wecom",
      "blurb": "Enterprise WeChat internal app via callback + send API.",
      "order": 80,
      "aliases": [
        "wework",
        "qiwei",
        "wxwork"
      ]
    }
  },
  "dependencies": {
    "clawdbot": "*",
    "fast-xml-parser": "^4.3.6"
  },
  "scripts": {
    "lint": "node -c src/index.js",
    "test": "vitest run",
    "wecom:selfcheck": "node scripts/wecom-selfcheck.mjs"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dingxiang-me/OpenClaw-Wechat.git"
  },
  "keywords": [],
  "author": "",
  "bugs": {
    "url": "https://github.com/dingxiang-me/OpenClaw-Wechat/issues"
  },
  "homepage": "https://github.com/dingxiang-me/OpenClaw-Wechat#readme",
  "devDependencies": {
    "vitest": "^4.0.18"
  }
}
